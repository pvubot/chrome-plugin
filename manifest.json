{
    "name": "Plant Vs Undead - Helper",
    "description": "Помощник по работе с фермой на сайте Plant Vs Undead. Узнавайте о своей поливке, вороне на растении и возможности своей очереди.",
    "version": "1.0.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/images/get_started16.png",
        "32": "/images/get_started32.png",
        "48": "/images/get_started48.png",
        "128": "/images/get_started128.png"
      }
    },
    "icons": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://marketplace.plantvsundead.com/*"],
            "js": ["pvu.js"]
        }
    ],
    "permissions": ["storage", "activeTab", "scripting"],
    "options_page": "options.html"
  }